<h1>Listing Teams</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Position</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= image_tag team.photo_url.nil? ? 'team.jpg' : team.photo_url(:team_photo), :class => 'img-responsive img-thumbnail' %></td>
        <td><%= team.name %></td>
        <td><%= team.position %></td>
        <td><%= team.description %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

