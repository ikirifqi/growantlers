<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Growantlers Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'dashboard', media: 'all', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Growantlers Demo</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Sign Out', destroy_admin_session_path, :method => :delete %></li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li><%= link_to 'Overview', dashboard_path %></li>
          </ul>
          <ul class="nav nav-sidebar">
            <li><%= link_to 'Admins', admins_path %></li>
            <li><%= link_to 'Portfolios', portfolios_path %></li>
            <li><%= link_to 'Teams', teams_path %></li>
          </ul>
        </div>

        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <%- if flash[:alert] || flash[:notice] %>
            <div class="alert alert-<%= flash[:alert].present? ? 'danger' : 'success' %>"><%= flash[:alert].present? ? flash[:alert] : flash[:notice] %></div>
          <%- end %>
          <%= yield %>
        </div>
      </div>
    </div>
    <%= javascript_include_tag 'dashboard', 'data-turbolinks-track' => true %>
  </body>
</html>
