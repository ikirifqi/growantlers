<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Admin Gateway</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'dashboard', media: 'all', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <div class="container">
      <%- if flash[:alert] || flash[:notice] %>
        <div class="alert alert-<%= flash[:alert].present? ? 'danger' : 'success' %>"><%= flash[:alert].present? ? flash[:alert] : flash[:notice] %></div>
      <%- end %>
      <%= yield %>
    </div>
    <%= javascript_include_tag 'dashboard', 'data-turbolinks-track' => true %>
  </body>
</html>
