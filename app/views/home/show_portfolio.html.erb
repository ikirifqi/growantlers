<section class="fullscreen image-bg parallax">
  <div class="background-image-holder">
    <%= image_tag @portfolio.main_image_url.nil? ? 'project-case-study-4.jpg' : @portfolio.main_image_url, :alt => 'Feature Image', :class => 'background-image' %>
  </div>
</section>
<section>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center">
        <h4 class="uppercase"><%= @portfolio.title %></h4>
        <p class="mb48">
          <%= @portfolio.main_description %>
        </p>
        <ul class="mb0">
          <li>Client
            <strong><%= @portfolio.client %></strong>
          </li>
          <li>Role
            <strong><%= @portfolio.role %></strong>
          </li>
          <li>Agency
            <strong><%= @portfolio.agency %></strong>
          </li>
          <li>Date
            <strong><%= @portfolio.date.strftime('%b %Y') %></strong>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>
<section class="fullscreen image-bg parallax">
  <div class="background-image-holder">
    <%= image_tag @portfolio.secondary_image_url.nil? ? 'project-case-study-1.jpg' : @portfolio.secondary_image_url, :alt => 'Feature Image', :class => 'background-image' %>
  </div>
</section>
<section>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-2 col-sm-5 col-sm-offset-1">
        <p><%= @portfolio.left_description %></p>
      </div>
      <div class="col-md-4 col-sm-5">
        <p><%= @portfolio.right_description %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2 text-right">
        <hr class="mt8">
        <h6 class="uppercase mb0"><%= [@portfolio.team.name, @portfolio.team.position].join(' - ') %></h6>
      </div>
    </div>
  </div>
</section>
<section class="fullscreen image-bg parallax">
  <div class="background-image-holder">
    <%= image_tag @portfolio.optional_image_url.nil? ? 'project-case-study-2.jpg' : @portfolio.optional_image_url, :alt => 'Feature Image', :class => 'background-image' %>
  </div>
</section>
<section>
  <div class="container">
    <div class="row mb40">
      <div class="col-md-6 col-md-offset-3 text-center">
        <h4 class="uppercase"><%= @portfolio.footer_title %></h4>
        <p class="mb48">
          <%= @portfolio.footer_description %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center">
        <h6 class="uppercase">Share The Love</h6>
        <ul class="social-list list-inline">
          <li>
            <a href="#">
              <i class="ti-twitter-alt icon icon-sm"></i>
            </a>
          </li>
          <li>
            <a href="#">
              <i class="ti-facebook icon icon-sm"></i>
            </a>
          </li>
          <li>
            <a href="#">
              <i class="ti-dribbble icon icon-sm"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>
