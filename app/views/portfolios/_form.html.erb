<%= form_for(@portfolio) do |f| %>
  <% if @portfolio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@portfolio.errors.count, "error") %> prohibited this portfolio from being saved:</h2>

      <ul>
      <% @portfolio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :main_image %><br>
    <%= image_tag @portfolio.main_image, :class => 'img-thumbnail', :width => '256px' unless @portfolio.main_image.blank? %>
    <%= f.file_field :main_image %>
  </div>
  <div class="form-group">
    <%= f.label :secondary_image %><br>
    <%= image_tag @portfolio.secondary_image, :class => 'img-thumbnail', :width => '256px' unless @portfolio.secondary_image.blank? %>
    <%= f.file_field :secondary_image %>
  </div>
  <div class="form-group">
    <%= f.label :optional_image %><br>
    <%= image_tag @portfolio.optional_image, :class => 'img-thumbnail', :width => '256px' unless @portfolio.optional_image.blank? %>
    <%= f.file_field :optional_image %>
  </div>
  <div class="form-group">
    <%= f.label :optional_image_visibility %><br />
    <%= f.check_box :optional_image_visibility %>
  </div>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :main_description %><br>
    <%= f.text_area :main_description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :client %><br>
    <%= f.text_field :client, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :role %><br>
    <%= f.text_field :role, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :agency %><br>
    <%= f.text_field :agency, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :date %><br>
    <%= f.date_select :date, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :left_description %><br>
    <%= f.text_area :left_description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :right_description %><br>
    <%= f.text_area :right_description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :footer_title %><br>
    <%= f.text_field :footer_title, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :footer_description %><br>
    <%= f.text_area :footer_description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :brief_description %><br>
    <%= f.text_field :brief_description, :class => 'form-control' %>
  </div>

  <%= f.submit :class => 'btn btn-success' %>
<% end %>
